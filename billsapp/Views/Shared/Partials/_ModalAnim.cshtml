
<div id="@Model.modal.Name" class="zoom-anim-dialog modal-block @Model.modal.ColorLevel modal-block-@Model.modal.Context mfp-hide">
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">@Model.modal.Title</h2>
        </header>
        <div class="panel-body">
            <div class="modal-wrapper">
                <div class="modal-icon">
                    <i class="@Html.Raw("fa " + (String)Model.modal.Icon)"></i>
                </div>
                <div class="modal-text">
                    @(Model.modal.ShowSubTitle ? Html.Raw("<h4>" + Model.modal.SubTitle + "</h4>") : "")
                    @Html.Raw((String)Model.modal.Content)
                </div>
            </div>
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    @{
                        var btnConfirm = Model.modal.ShowConfirmButton ? "<button class=\"btn btn-" + Model.modal.Context + " modal-confirm\">" + Model.modal.ConfirmButtonText + "</button>" : "";

                        var btnDismiss = Model.modal.ShowDismissButton ? "<button class=\"btn btn-default modal-dismiss\">" + Model.modal.DismissButtonText + "</button>" : "";
                    }

                    @Html.Raw(btnConfirm)
                    @Html.Raw(btnDismiss)

                </div>
            </div>
        </footer>
    </section>
</div>